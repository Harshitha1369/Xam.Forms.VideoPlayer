<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xam.Forms.VideoPlayer.Samples"
             Title="Play Video Demos"
             x:Class="Xam.Forms.VideoPlayer.Samples.MainPage">

    <StackLayout>
        <Button Text="Show Video Library"
                Margin="10"
                HorizontalOptions="Center"
                Clicked="OnShowVideoLibraryClicked" />

        <Button Text="Play Bunny"
                Margin="10"
                HorizontalOptions="Center"
                Clicked="ButtonPlayBunny_Clicked" />
    </StackLayout>

</ContentPage>
